{
  "name": "@awardit/graphql-ast-client",
  "version": "0.2.1",
  "description": "Experimental small GraphQL client adaptable to HTTP/1.x or HTTP/2.x",
  "authors": [
    "Martin Wernst√•l <m4rw3r@gmail.com>"
  ],
  "homepage": "https://github.com/m4rw3r/graphql-query-joiner",
  "repository": {
    "type": "git",
    "url": "https://github.com/m4rw3r/graphql-query-joiner.git"
  },
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "sideEffects": false,
  "scripts": {
    "build": "npm-run-all build:*",
    "build:rollup": "rollup -c rollup.config.js",
    "build:flow": "cp build/stub/flow.js dist/esm/index.js.flow && cp build/stub/flow.js dist/cjs/index.js.flow",
    "coverage": "nyc --reporter=html ava --verbose",
    "clean": "rm -rf dist",
    "distclean": "rm -rf package-lock.json node_modules dist",
    "flow": "flow check",
    "prepack": "npm run clean && npm run test && npm run build",
    "test": "npm-run-all test:*",
    "test:flow": "flow status",
    "test:ava": "ava --verbose",
    "test:xo": "xo",
    "watch": "nodemon -w src -w test --exec \"npm run -q test || true\""
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "graphql": "^15.0.0||^16.0.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.17.0",
    "@babel/plugin-transform-flow-strip-types": "^7.10.4",
    "@babel/preset-env": "^7.10.3",
    "@babel/register": "^7.17.7",
    "@rollup/plugin-babel": "^5.0.4",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "ava": "^4.3.0",
    "babel-plugin-transform-async-to-promises": "^0.8.15",
    "dummee": "^1.2.0",
    "eslint-config-xo-flow": "^0.3.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "flow-bin": "^0.180.0",
    "graphql": "^16.0.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rollup": "^2.28.0",
    "xo": "^0.50.0"
  },
  "xo": {
    "parser": "@babel/eslint-parser",
    "extends": [
      "xo-flow"
    ],
    "overrides": [
      {
        "files": "**/*.test.js",
        "rules": {
          "flowtype/no-unused-expressions": "off",
          "flowtype/require-parameter-type": "off",
          "flowtype/require-return-type": "off",
          "no-unused-expressions": "off",
          "quote-props": "off"
        }
      },
      {
        "files": [
          "*.config.js",
          "*.config.cjs"
        ],
        "rules": {
          "unicorn/prefer-module": "off",
          "flowtype/require-valid-file-annotation": "off",
          "import/no-anonymous-default-export": "off"
        }
      }
    ],
    "rules": {
      "comma-dangle": [
        "error",
        {
          "arrays": "always-multiline",
          "objects": "always-multiline",
          "imports": "always-multiline",
          "exports": "always-multiline",
          "functions": "never"
        }
      ],
      "flowtype/array-style-complex-type": [
        "error",
        "verbose"
      ],
      "flowtype/array-style-simple-type": [
        "error",
        "verbose"
      ],
      "flowtype/delimiter-dangle": [
        "error",
        "always-multiline"
      ],
      "flowtype/newline-after-flow-annotation": [
        "error",
        "always"
      ],
      "flowtype/require-types-at-top": "warn",
      "flowtype/require-valid-file-annotation": [
        "error",
        "always",
        {
          "annotationStyle": "block"
        }
      ],
      "flowtype/require-return-type": [
        "error",
        "always",
        {
          "annotateUndefined": "always"
        }
      ],
      "flowtype/type-import-style": [
        "error",
        "declaration"
      ],
      "import/extensions": [
        "error",
        "never"
      ],
      "max-len": [
        "error",
        {
          "code": 100,
          "comments": 80,
          "ignoreStrings": true,
          "ignoreTemplateLiterals": true
        }
      ],
      "max-params": "off",
      "no-promise-executor-return": "off",
      "no-unused-vars": "error",
      "n/file-extension-in-import": "off",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "quotes": [
        "error",
        "double",
        {
          "allowTemplateLiterals": true
        }
      ],
      "unicorn/no-array-reduce": "off",
      "unicorn/no-array-for-each": "off",
      "unicorn/no-array-callback-reference": "off",
      "valid-jsdoc": "off"
    },
    "space": 2
  }
}
