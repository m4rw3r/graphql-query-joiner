{
  "extends": "../../tsconfig.build.json",
  // Typescript has awful defaults, so we have to inlcude/exclude to not get
  // everything including the kitchen sink compiled:
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["**/*test*"],
  "files": ["./src/index.ts"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist"
  }
}
