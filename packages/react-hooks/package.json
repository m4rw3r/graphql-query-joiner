{
  "name": "@awardit/react-graphql-hooks",
  "version": "0.0.8",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "pnpm run build:d.ts && pnpm run build:js",
    "build:d.ts": "rollup -c",
    "build:js": "tsc --project tsconfig.build.json",
    "check": "tsc --noEmit",
    "clean": "rm -rf coverage dist",
    "prepack": "pnpm run clean && pnpm run check && pnpm run test && pnpm run build",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@awardit/graphql-ast-client": "workspace:^",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "peerDependencies": {
    "@awardit/graphql-ast-client": "^1.0.0",
    "react": "^18.2.0 || ^19.0.0"
  },
  "dependencies": {
    "@m4rw3r/react-pause-champ": "^1.0.1"
  }
}
